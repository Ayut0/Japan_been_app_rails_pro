<div class="login-user-container">
    <h1>LOGIN</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <section class="u-form">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
        </section>
        <section class="u-form">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
        </section>
        <section class="u-form">
            <%= f.label :remember_me do %>
                <%= f.check_box :remember_me, id: 'not-checkbox' %>
                <span>Remember me on this controller</span>
            <% end %>
        </section>
        <%= f.submit "LOGIN", class: '' %>
    <% end %>
    <p>New User? <%= link_to "SIGNUP", new_user_path %> here.</p>
</div>